<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane fx:id="anchorPane" stylesheets="@../../css/MFXColors.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.codesbusters.solidstock.controller.login.LoginController">
    <stylesheets>
        <URL value="@../../css/ChecksRadiosToggles.css" />
    </stylesheets>
    <StackPane>
        <VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: white;">
            <children>
                <AnchorPane id="pane2" maxHeight="-Infinity" minHeight="30.0" minWidth="300.0" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.12, -1.0, 2.0);" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox spacing="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="20.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <VBox spacing="15">
                                            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                                <Label text="Connexion">
                                                    <font>
                                                        <Font name="System Bold" size="22.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                                <Label text="Veuillez vous connecter pour continuer">
                                                    <font>
                                                        <Font size="14.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <padding>
                                                <Insets bottom="5" top="5" />
                                            </padding>
                                        </VBox>
                                    </children>
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>

                <AnchorPane id="pane2" minHeight="250.0" minWidth="300.0" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.12, -1.0, 2.0);" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <MFXTextField fx:id="username" floatMode="BORDER" floatingText="Nom d'utilisateur" maxWidth="310" prefWidth="310">
                                    <VBox.margin>
                                        <Insets left="10.0" />
                                    </VBox.margin>
                                </MFXTextField>

                                <MFXTextField fx:id="password" floatMode="BORDER" floatingText="Mot de passe" maxWidth="310" prefWidth="310">
                                    <VBox.margin>
                                        <Insets left="10.0" />
                                    </VBox.margin>
                                </MFXTextField>
                                <MFXCheckbox fx:id="rememberMe" text="Se souvenir de moi" styleClass="customCheck" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>

                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </AnchorPane>

                <AnchorPane id="pane3" maxHeight="70.0" minHeight="70.0" minWidth="300.0" prefHeight="70.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 8;  -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.12, -1.0, 2.0);" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_RIGHT" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <children>
                            <MFXButton id="cancel" buttonType="RAISED" minHeight="27.0" minWidth="70.0" onAction="#cancel" prefHeight="38" prefWidth="100" style="-fx-border-color: black; -fx-background-radius: 8; -fx-border-radius: 8;  -fx-font-weight: bold; -fx-cursor: hand;" styleClass="outline-button" text="ANNULER" HBox.hgrow="ALWAYS" />

                            <MFXButton buttonType="RAISED" minHeight="27.0" minWidth="70.0" onAction="#handleLoginButtonClick" prefHeight="38" prefWidth="150" style="-fx-background-color: #2196F3; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold; -fx-text-fill: white;" styleClass="mfx-button" text="SE CONNECTER" HBox.hgrow="ALWAYS" />
                        </children>
                        <padding>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                    </HBox>
                </AnchorPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </StackPane>
</AnchorPane>
